using System;

class Program
{
    static void Main()
    {
        Console.WriteLine("=== Sistema de Notas con Promedio ===");

        int cantidadEstudiantes;

        // --- Validar cantidad de estudiantes ---
        do
        {
            Console.Write("¿Cuántos estudiantes desea registrar? ");
            if (int.TryParse(Console.ReadLine(), out cantidadEstudiantes) && cantidadEstudiantes > 0)
            {
                break; // si está correcto, salimos del ciclo
            }
            else
            {
                Console.WriteLine(" Error: ingrese un número válido mayor que 0.");
            }
        } while (true);

        // --- Crear la matriz: filas = estudiantes, columnas = 3 notas ---
        double[,] matrizNotas = new double[cantidadEstudiantes, 3];

        // --- Pedir notas de cada estudiante ---
        for (int indiceEstudiante = 0; indiceEstudiante < cantidadEstudiantes; indiceEstudiante++)
        {
            Console.WriteLine($"\nIngresando notas del estudiante #{indiceEstudiante + 1}:");

            for (int indiceNota = 0; indiceNota < 3; indiceNota++)
            {
                double nota;

                // Validar que la nota sea un número entre 0 y 100
                do
                {
                    Console.Write($"Ingrese la nota del corte {indiceNota + 1} (0-100): ");
                    if (double.TryParse(Console.ReadLine(), out nota) && nota >= 0 && nota <= 100)
                    {
                        matrizNotas[indiceEstudiante, indiceNota] = nota;
                        break;
                    }
                    else
                    {
                        Console.WriteLine(" Error: la nota debe ser un número entre 0 y 100.");
                    }
                } while (true);
            }
        }

        // --- Calcular y mostrar resultados ---
        Console.WriteLine("\n Resultados Finales ");

        for (int indiceEstudiante = 0; indiceEstudiante < cantidadEstudiantes; indiceEstudiante++)
        {
            double sumaNotas = 0;

            Console.Write($"Estudiante #{indiceEstudiante + 1} - Notas: ");

            for (int indiceNota = 0; indiceNota < 3; indiceNota++)
            {
                Console.Write(matrizNotas[indiceEstudiante, indiceNota] + " ");
                sumaNotas += matrizNotas[indiceEstudiante, indiceNota];
            }

            double promedioFinal = sumaNotas / 3;
            Console.WriteLine($" | Promedio: {promedioFinal:F2}");
        }

        Console.WriteLine("\n Programa Finalizado ");
    }
}

